<view class="container pidding-top-xl" >
    <view class="lic-content" wx:if="{{!licImgURL}}" bindtap="onUploadLic">
        <image class="lic-tmpl stretch" src="../../material/register/driving_license.jpeg"></image>
        <view class="cuIcon-camerafill lg text-fray"></view>
        <view class="instruction">请上传驾驶证照片</view>
    </view>
    <block wx:else>
        <view class="lic-content">
            <image class="stretch" src="{{licImgURL}}"/>
        </view>
        <view class="lic-form">
            <view class="cu-form-group margin-top">
		        <view class="title">姓名</view>
		        <input placeholder="例如：张三" value="{{lic_name}}"></input>
	        </view>
            <view class="cu-form-group">
		        <view class="title">驾驶证号</view>
		        <input placeholder="纯数字驾驶证号" value="{{lic_number}}"></input>
	        </view>
            <view class="cu-form-group">
		        <view class="title">性别</view>
                <picker bindchange="onGenderChange" value="{{genderIndex}}" range="{{genders}}">
			        <view class="picker">
				        {{genders[genderIndex]}}
			        </view>
		        </picker>
	        </view>
            <view class="cu-form-group">
		        <view class="title">出生日期</view>
                <picker mode="date" value="{{date}}" start="1995-09-01" end="2020-09-01" bindchange="DateChange">
                    <view class="picker">
				        {{date}}
			        </view>
                </picker>
            </view>
        </view>
         <button class="cu-btn bg-red margin-tb-sm lg margin-top-xl">
        递交审查
        </button>
    </block>

   



</view>